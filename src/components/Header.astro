<header class="fixed w-full z-50 transition-all duration-300" id="main-header">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <a href="#" class="text-2xl font-heading font-bold text-white">
      <span class="text-proton-red">Megat</span> Motors
    </a>
    
    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-8">
      <a href="#features" class="text-white hover:text-proton-red transition-colors text-sm font-medium">Features</a>
      <a href="#about" class="text-white hover:text-proton-red transition-colors text-sm font-medium">About</a>
      <a href="#testimonials" class="text-white hover:text-proton-red transition-colors text-sm font-medium">Testimonials</a>
      <a href="#contact" class="bg-proton-red text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors text-sm font-medium">Book Test Drive</a>
    </nav>
  </div>
  
  <!-- Mobile Navigation -->
  <nav id="mobile-menu" class="hidden bg-white shadow-md w-full absolute">
    <div class="container mx-auto px-4 py-4 flex flex-col space-y-4">
      <a href="#features" class="text-proton-black hover:text-proton-red transition-colors text-sm font-medium">Features</a>
      <a href="#about" class="text-proton-black hover:text-proton-red transition-colors text-sm font-medium">About</a>
      <a href="#testimonials" class="text-proton-black hover:text-proton-red transition-colors text-sm font-medium">Testimonials</a>
      <a href="#contact" class="bg-proton-red text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors text-sm font-medium text-center">Book Test Drive</a>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.getElementById('main-header');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Change header background on scroll
  window.addEventListener('scroll', () => {
    if (header) {
      if (window.scrollY > 50) {
        header.classList.add('bg-white', 'shadow-md');
        header.classList.remove('bg-transparent');
        
        // Change text color when header has background
        const links = header.querySelectorAll('a:not(.bg-proton-red)');
        const menuButton = header.querySelector('#menu-toggle');
        
        if (menuButton) {
          menuButton.classList.remove('text-white');
          menuButton.classList.add('text-proton-black');
        }
        
        links.forEach(link => {
          link.classList.remove('text-white', 'hover:text-proton-red');
          link.classList.add('text-proton-black', 'hover:text-proton-red');
        });
      } else {
        header.classList.remove('bg-white', 'shadow-md');
        header.classList.add('bg-transparent');
        
        // Revert text color when header is transparent
        const links = header.querySelectorAll('a:not(.bg-proton-red)');
        const menuButton = header.querySelector('#menu-toggle');
        
        if (menuButton) {
          menuButton.classList.remove('text-proton-black');
          menuButton.classList.add('text-white');
        }
        
        links.forEach(link => {
          link.classList.remove('text-proton-black', 'hover:text-proton-red');
          link.classList.add('text-white', 'hover:text-proton-red');
        });
      }
    }
  });
</script>