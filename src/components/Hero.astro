<section class="relative min-h-screen flex items-center text-white">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0 bg-gradient-to-r from-proton-black/80 to-proton-black/60">
    <img 
      src="https://nazznco.my/wp-content/uploads/2023/12/Quarter-Front-ColourVariant-Red-Final-RGB-scaled.jpg" 
      alt="Proton X90 SUV" 
      class="w-full h-full object-cover mix-blend-overlay"
    />
  </div>
  
  <div class="container mx-auto px-4 py-20 relative z-10">
    <div class="max-w-3xl" data-aos="fade-up">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-4 leading-tight">
        Discover the All-New <span class="text-proton-red">Proton X90</span> with Megat
      </h1>
      
      <p class="text-lg md:text-xl mb-8 text-gray-200 max-w-2xl">
        Your Trusted Proton Sales Advisor â€“ Book a Test Drive Today and Experience Luxury, Performance, and Innovation
      </p>
      
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
        <a href="#contact" class="bg-proton-red hover:bg-red-700 text-white font-medium py-3 px-8 rounded-md transition-all transform hover:scale-105 text-center">
          Book Now
        </a>
        <a href="#contact" class="border-2 border-white hover:border-proton-red hover:text-proton-red text-white font-medium py-3 px-8 rounded-md transition-colors text-center">
          Get a Free Quote
        </a>
      </div>
    </div>
    
    <!-- Car Stats Brief -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl" data-aos="fade-up" data-aos-delay="200">
      <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg text-center">
        <p class="text-xl md:text-2xl font-bold">1.5L</p>
        <p class="text-sm text-gray-300">TGDi Hybrid</p>
      </div>
      <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg text-center">
        <p class="text-xl md:text-2xl font-bold">7</p>
        <p class="text-sm text-gray-300">Premium Seats</p>
      </div>
      <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg text-center">
        <p class="text-xl md:text-2xl font-bold">ADAS</p>
        <p class="text-sm text-gray-300">3.0 Safety</p>
      </div>
      <div class="bg-white/10 backdrop-blur-sm p-4 rounded-lg text-center">
        <p class="text-xl md:text-2xl font-bold">12.3"</p>
        <p class="text-sm text-gray-300">Infotainment</p>
      </div>
    </div>
  </div>
  
  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#features" aria-label="Scroll down">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>